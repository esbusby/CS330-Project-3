@model Fall2025_Project3_esbusby.Models.Actor

@{
    ViewData["Title"] = "Edit";
}

@functions {
    public string GetImageSrc(byte[]? imageData)
    {
        if (imageData == null || imageData.Length == 0)
        {
            return "https://via.placeholder.com/300x450?text=No+Image";
        }

        var base64 = Convert.ToBase64String(imageData);
        return $"data:image/jpeg;base64,{base64}";
    }
}

<h1>Edit</h1>

<h4>Actor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" type="text" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" type="text" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" type="number" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImdbLink" class="control-label"></label>
                <input asp-for="ImdbLink" class="form-control" type="url" />
                <span asp-validation-for="ImdbLink" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Current Photo</label>
                <div>
                    <img src="@GetImageSrc(Model.Photo)"
                         alt="Current Photo"
                         style="max-width: 200px; max-height: 300px;" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Photo" class="control-label">Upload New Photo (optional)</label>
                <input type="file" name="Photo" class="form-control" accept="image/*" />
                <span asp-validation-for="Photo" class="text-danger"></span>
                <small class="form-text text-muted">Leave empty to keep current photo</small>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}