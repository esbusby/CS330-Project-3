@model Fall2025_Project3_esbusby.Models.Movie
@using VaderSharp2
@{
    ViewData["Title"] = "Details";
    var reviews = ViewBag.Reviews as List<(string review, SentimentAnalysisResults sentiment)>;
    double avgSentiment = ViewBag.AverageSentiment ?? 0;
}
@functions {
    public string GetImageSrc(byte[]? imageData)
    {
        if (imageData == null || imageData.Length == 0)
        {
            return "https://via.placeholder.com/300x450?text=No+Image";
        }
        var base64 = Convert.ToBase64String(imageData);
        return $"data:image/jpeg;base64,{base64}";
    }
}
<h1>Details</h1>
<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImdbLink)
        </dt>
        <dd class="col-sm-10">
            <a href="@Model.ImdbLink" target="_blank">IMDB</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.YearOfRelease)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YearOfRelease)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Poster)
        </dt>
        <dd class="col-sm-10">
            <img src="@GetImageSrc(Model.Poster)"
                 alt="Poster"
                 style="max-width: 300px; max-height: 450px;" />
        </dd>
    </dl>
</div>
<hr />
<h4>Actors in this Movie</h4>
@if (Model.ActorMovies != null && Model.ActorMovies.Any())
{
    <ul>
        @foreach (var actorMovie in Model.ActorMovies)
        {
            <li>
                <a asp-controller="Actors" asp-action="Details" asp-route-id="@actorMovie.ActorId">
                    @actorMovie.Actor?.Name
                </a>
            </li>
        }
    </ul>
}
else
{
    <p>No actors have been added to this movie yet.</p>
}

<hr />

<h3>Sentiment Average: @avgSentiment.ToString("#.###")</h3>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th style="width: 60%;">AI Generated Reviews</th>
            <th style="width: 40%;">Sentiment Analysis</th>
        </tr>
    </thead>
    <tbody>
        @if (reviews != null && reviews.Any())
        {
            for (int i = 0; i < reviews.Count; i++)
            {
                <tr>
                    <td>@reviews[i].review</td>
                    <td>
                        <strong>Sentiment:</strong> @reviews[i].sentiment.Compound<br />
                        <strong>Positive:</strong> @reviews[i].sentiment.Positive<br />
                        <strong>Negative:</strong> @reviews[i].sentiment.Negative<br />
                        <strong>Neutral:</strong> @reviews[i].sentiment.Neutral
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
